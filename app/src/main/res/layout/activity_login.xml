<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="40dp"
    android:paddingRight="30dp"
    tools:context=".LoginActivity">


    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="210dp"
        android:paddingLeft="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/trans_bg_white" />

        <ImageView
            android:layout_width="168dp"
            android:layout_height="171dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingRight="25dp"
            android:src="@drawable/logo_trans" />
    </FrameLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/thinner_border_button"
        android:hint="Email"
        android:textColorHint="@color/colorAccent"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/thinner_border_button"
        android:hint="Password"
        android:textColorHint="@color/colorAccent"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Log In"
        android:background="@drawable/round_anything"
        android:textColor="#FFFFFF"
        app:backgroundTint="#279A94" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="italic|bold"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="@color/colorAccent" />

</LinearLayout> 
